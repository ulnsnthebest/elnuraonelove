  <div class="secret-message" id="secret">
    <h3>–¢—ã - —Å–º—ã—Å–ª –º–æ–µ–π –∂–∏–∑–Ω–∏! üíñ</h3>
    <p>–° –∫–∞–∂–¥—ã–º –¥–Ω—ë–º –ª—é–±–ª—é —Ç–µ–±—è –≤—Å—ë —Å–∏–ª—å–Ω–µ–µ</p>
  </div>

  <script>
    // –ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä —á–∞—Å—Ç–∏—Ü (–ø–∞–¥–∞—é—â–∏–µ —Å–µ—Ä–¥–µ—á–∫–∏ –∏ –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç—ã)
    const particles = document.getElementById('particles');
    function createParticle() {
      const types = ['‚ù§Ô∏è', 'üíñ', 'üíï', 'üíû'];
      const particle = document.createElement('div');
      particle.className = 'particle';
      particle.textContent = types[Math.floor(Math.random() * types.length)];
      particle.style.left = `${Math.random() * 100}vw`;
      particle.style.fontSize = `${Math.random() * 20 + 10}px`;
      particle.style.animationDuration = `${Math.random() * 5 + 5}s`;
      particles.appendChild(particle);
      setTimeout(() => particle.remove(), 15000);
    }
    setInterval(createParticle, 500);

    // –°–ª—É—á–∞–π–Ω—ã–µ –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç—ã (–ø–æ—è–≤–ª—è—é—Ç—Å—è –∫–∞–∂–¥—ã–µ 3 —Å–µ–∫—É–Ω–¥—ã)
    const compliments = [
      "–¢—ã –ø—Ä–µ–∫—Ä–∞—Å–Ω–∞! üå∏",
      "–¢–≤–æ–π —Å–º–µ—Ö - –º—É–∑—ã–∫–∞ –¥–ª—è –º–æ–µ–π –¥—É—à–∏ üé∂",
      "–¢—ã –º–æ—ë –≤–¥–æ—Ö–Ω–æ–≤–µ–Ω–∏–µ üí´",
      "–° —Ç–æ–±–æ–π —è –æ–±—Ä—ë–ª —Å–º—ã—Å–ª –∂–∏–∑–Ω–∏ üåü",
      "–¢—ã —Å–æ–≤–µ—Ä—à–µ–Ω–Ω–∞ –≤–æ –≤—Å—ë–º üíñ"
    ];
    setInterval(() => {
      const bubble = document.createElement('div');
      bubble.className = 'particle';
      bubble.textContent = compliments[Math.floor(Math.random() * compliments.length)];
      bubble.style.cssText = `
        left: ${Math.random() * 90 + 5}vw;
        font-size: 1.2rem;
        animation-duration: 8s;
        color: var(--primary);
      `;
      particles.appendChild(bubble);
      setTimeout(() => bubble.remove(), 8000);
    }, 3000);

    // –ê–Ω–∏–º–∞—Ü–∏—è —Ç–∞–π–º–ª–∞–π–Ω–∞ –ø—Ä–∏ —Å–∫—Ä–æ–ª–ª–µ
    const timelineItems = document.querySelectorAll('.timeline-item');
    function checkScroll() {
      timelineItems.forEach(item => {
        const rect = item.getBoundingClientRect();
        if (rect.top < window.innerHeight * 0.8) {
          item.classList.add('active');
        }
      });
    }
    window.addEventListener('scroll', checkScroll);
    checkScroll();

    // –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–µ —Å–µ—Ä–¥—Ü–µ, —Å–µ–∫—Ä–µ—Ç–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ, –∫–æ–Ω—Ñ–µ—Ç—Ç–∏ –∏ –ø–æ—Ü–µ–ª—É–π –æ—Ç –∫–æ—Ç—ë–Ω–∫–∞
    let clickCount = 0;
    const heart = document.getElementById('heart');
    const secret = document.getElementById('secret');
    heart.addEventListener('click', () => {
      clickCount++;
      secret.classList.toggle('active');
      
      // –ö–∞–∂–¥—ã–µ 3 –∫–ª–∏–∫–∞ –º–µ–Ω—è–µ—Ç—Å—è –æ—Å–Ω–æ–≤–Ω–æ–π —Ü–≤–µ—Ç
      if (clickCount % 3 === 0) {
        document.documentElement.style.setProperty('--primary', `hsl(${Math.random() * 360}, 70%, 60%)`);
      }
      
      // –ö–∞–∂–¥—ã–µ 5 –∫–ª–∏–∫–æ–≤ ‚Äì –≤—Å–ø–ª–µ—Å–∫ –∫–æ–Ω—Ñ–µ—Ç—Ç–∏ (–º–∞–ª–µ–Ω—å–∫–∏–µ —Å–µ—Ä–¥–µ—á–∫–∏)
      if (clickCount % 5 === 0) {
        const heartRect = heart.getBoundingClientRect();
        const centerX = heartRect.left + heartRect.width / 2;
        const centerY = heartRect.top + heartRect.height / 2;
        confettiBurst(centerX, centerY);
      }
      
      // –ö–∞–∂–¥—ã–µ 7 –∫–ª–∏–∫–æ–≤ ‚Äì –ø–æ—Ü–µ–ª—É–π –æ—Ç –∫–æ—Ç—ë–Ω–∫–∞!
      if (clickCount % 7 === 0) {
        const kittenKiss = document.createElement('img');
        kittenKiss.src = 'https://media.giphy.com/media/MDJ9IbxxvDUQM/giphy.gif';
        kittenKiss.classList.add('kitten-kiss');
        const heartRect = heart.getBoundingClientRect();
        kittenKiss.style.left = (heartRect.left + heartRect.width / 2 - 50) + 'px';
        kittenKiss.style.top = (heartRect.top - 80) + 'px';
        document.body.appendChild(kittenKiss);
        setTimeout(() => {
          kittenKiss.remove();
        }, 3000);
      }
    });
    
    function confettiBurst(x, y) {
      for (let i = 0; i < 12; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'particle';
        const types = ['‚ù§Ô∏è', 'üíñ', 'üíï', 'üíû'];
        confetti.textContent = types[Math.floor(Math.random() * types.length)];
        confetti.style.position = 'fixed';
        confetti.style.left = x + 'px';
        confetti.style.top = y + 'px';
        confetti.style.fontSize = `${Math.random() * 20 + 10}px`;
        confetti.style.animationDuration = `${Math.random() * 3 + 3}s`;
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 8000);
      }
    }
    
    // –ü–∞—Ä–∞–ª–ª–∞–∫—Å —ç—Ñ—Ñ–µ–∫—Ç –ø—Ä–∏ –¥–≤–∏–∂–µ–Ω–∏–∏ –º—ã—à–∏
    document.addEventListener('mousemove', (e) => {
      const x = (e.clientX / window.innerWidth - 0.5) * 20;
      const y = (e.clientY / window.innerHeight - 0.5) * 20;
      document.documentElement.style.transform = `translate(${x}px, ${y}px)`;
    });
    
    // –°–≤–∞–π–ø-–Ω–∞–≤–∏–≥–∞—Ü–∏—è –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤
    let touchStartY = 0;
    document.addEventListener('touchstart', e => {
      touchStartY = e.touches[0].clientY;
    });
    document.addEventListener('touchend', e => {
      const touchEndY = e.changedTouches[0].clientY;
      if (touchStartY - touchEndY > 50) {
        window.scrollBy(0, window.innerHeight * 0.8);
      }
    });
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –ø–æ —Å—Ç—Ä–µ–ª–∫–µ —Å–∫—Ä–æ–ª–ª–∞ –≤–Ω–∏–∑
    const scrollDown = document.getElementById('scrollDown');
    scrollDown.addEventListener('click', () => {
      const extra = document.getElementById('extra');
      if (extra) {
        extra.scrollIntoView({ behavior: 'smooth' });
      }
    });
  </script>
</body>
